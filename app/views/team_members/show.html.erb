<% provide(:title, @team.name) %>
<% provide(:description, "#{@team_member.name}\'s view on the #{@team.name} planning poker session") %>
<% provide(:keywords, "Team #{@team.name}, Team Member #{@team_member.name}") %>
<% provide(:extra_body_attributes, raw("data-team-name=\"#{@team.name}\"")) %>

<!-- Jumbotron will have to go when more behaviour is here -->
<div class="center jumbotron">
  <h1>Welcome <%= @team_member.name %></h1>

  <% # TODO get rid of these 2 'if' %>
  <% if @team.animator?(@team_member) %>
    <p>You are animator for the <%= @team.name %> team</p>
  <% else %>
    <p>You are a voter for the <%= @team.name %> team</p>
  <% end %>

  <div id="team-vote-state">
    <%= render 'votes/not_started' %>
  </div>

</div>
